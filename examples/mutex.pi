
import time
import sync

class Foo {
    func __init__() {
        this.total = 0
    }

    func add(x) {
        this.total += x
    }

    func total() {
        return this.total
    }
}

foo = Foo()

mt = sync.mutex()
aw = sync.await()

for i = 0; i < 10; i++ {
    aw.add(1)
    async func(x, foo, mt, aw) {
        mt.lock()
        foo.add(x)
        mt.unlock()
        aw.done()
    }(i, foo, mt, aw)
}

aw.wait()
print(foo.total())